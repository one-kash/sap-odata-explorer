# SAP Connection Configuration
SAP_HOST=your-sap-host:port
SAP_USER=your-username
SAP_PASSWORD=your-password
SAP_CLIENT=001
SAP_LANGUAGE=EN
SAP_USE_SSL=true

# OData Service Configuration
ODATA_BASE_PATH=/sap/opu/odata/sap
ODATA_SERVICE=sepmra_shop
ODATA_ENTITY=Products

# Output Configuration
OUTPUT_DIR=./output
OUTPUT_FORMAT=json  # Options: json | pretty

# Logging Configuration
LOG_LEVEL=info  # Options: debug | info | warn | error
LOG_MASK_FIELDS=password,passwd,token,authorization,secret,key,apikey,api_key
ERROR_LOG_FILE=${OUTPUT_DIR}/errors.log

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000
RETRY_BACKOFF_MULTIPLIER=2

# HTTP Configuration
REQUEST_TIMEOUT_MS=30000
